<h1> {{name}} Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id }}}
                {{{deleteForm user ../user _id}}}
            </div>
            <div class="card-content">
                <h5>{{title}}</h5>
                <p>{{removeTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.img}}" alt="user image">
                    <a href="/stories/user/{{user._id}}">{{user.display_name}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>
<script src="/js/delete_form.js"></script>